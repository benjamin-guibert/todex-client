{
  "name": "@benjamin-guibert/todex-client",
  "description": "Token decentralised exchange where you can deposit & withdraw tokens, make orders and trades (client).",
  "version": "0.1.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/benjamin-guibert/todex-client.git"
  },
  "author": "Benjamin Guibert <contact@bguibert.com>",
  "license": "MIT",
  "bugs": "https://github.com/benjamin-guibert/todex-client/issues",
  "files": [
    "dist/",
    "README.md",
    "CHANGELOG.md"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.{js{,x},ts{,x}}",
      "!src/index{,.style}.tsx",
      "!src/react-app-env.d.ts",
      "!src/contracts/**/*"
    ]
  },
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --max-warnings 0 --ext js,jsx,ts,tsx,md,mdx . && prettier --list-different .",
    "start": "react-scripts start",
    "test": "react-scripts test --watchAll=false --coverage",
    "test:watch": "react-scripts test",
    "test:update": "react-scripts test --watchAll=false --updateSnapshot",
    "build": "react-scripts build"
  },
  "dependencies": {
    "@metamask/detect-provider": "^1.2.0",
    "ethers": "^5.5.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "numeral": "^2.0.6",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "styled-components": "^5.3.3"
  },
  "devDependencies": {
    "@testing-library/react": "^12.1.2",
    "@tsconfig/create-react-app": "^1.0.2",
    "@types/jest": "^27.0.3",
    "@types/lodash": "^4.14.177",
    "@types/numeral": "^2.0.2",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@types/react-test-renderer": "^17.0.1",
    "@types/styled-components": "^5.1.15",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "bootstrap": "^5.1.3",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-md": "^1.0.19",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.4",
    "prettier": "^2.5.0",
    "react-bootstrap": "^2.0.3",
    "react-scripts": "^4.0.3",
    "react-test-renderer": "^17.0.2",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
